<% if @budget.errors.any? %>
  <div class="alert alert-danger">
    <h3>The following errors prevented the budget from being saved:</h3>
    <ul>
      <% @budget.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @budget, id: dom_id(@budget) do |f| %>
  <div class="mb-3">
    <%= f.label :title, class: 'form-label' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="row mb-3">
    <div class="col">
      <%= f.label :start_at, class: 'form-label' %>
      <%= f.datetime_field :start_at, class: 'form-control' %>
    </div>

    <div class="col">
      <%= f.label :end_at, class: 'form-label' %>
      <%= f.datetime_field :end_at, class: 'form-control' %>
    </div>
  </div>

  <%= link_to t('shared.cancel'), budgets_path, class: 'btn btn-outline-secondary' %>
  <%= f.submit t('shared.save'), class: 'btn btn-primary' %>
<% end %>
